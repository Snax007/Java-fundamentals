// DECLARATION
int[][] matrix;              // Recommended
int matrix[][];              // Valid but less common
int[] matrix[];              // Valid but confusing

// INITIALIZATION
int[][] arr1 = new int[3][4];           // 3 rows, 4 columns
int[][] arr2 = new int[3][];            // Jagged: 3 rows, columns unspecified
int[][] arr3 = {{1,2}, {3,4}, {5,6}};   // Direct initialization

